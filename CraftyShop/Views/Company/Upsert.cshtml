@model Company

<form method="post" class="mb-5">
    <div class="p-4 mt-4 border">
        <h2 class="text-primary">@(Model.Id==0? "Create":"Update") Company</h2>
        <hr/>
        <div class="row">
            <div class="col-10">
                <input asp-for="@Model.Id" hidden />
                <div class="mb-2 py-2">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-2 py-2">
                    <label asp-for="@Model.StreetAddress" class="form-label"></label>
                    <input asp-for="@Model.StreetAddress" class="form-control" />
                    <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                </div>
                <div class="mb-2 py-2">
                    <label asp-for="@Model.City" class="form-label"></label>
                    <input asp-for="@Model.City" class="form-control" />
                    <span asp-validation-for="@Model.City" class="text-danger"></span>
                </div>
                <div class="mb-2 py-2">
                    <label asp-for="@Model.State" class="form-label"></label>
                    <input asp-for="@Model.State" class="form-control" />
                    <span asp-validation-for="@Model.State" class="text-danger"></span>
                </div>
                <div class="mb- py-2">
                    <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
        </div>
        <div class="row py-2">
            <div class="col-6 col-lg-3">
                <button class="btn btn-primary form-control" type="submit">@(Model.Id == 0 ? "Create" : "Update")</button>
            </div>
            <div class="col-6 col-lg-3">
                <a asp-controller="Product" asp-action="index" class="btn btn-light form-control border">Back to Company List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}